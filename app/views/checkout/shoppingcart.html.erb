<h1>Shopping cart</h1>
<% @cart.each do |product| %>
    <%= product.name %>
    <br>
<% end %>
<% if @cart.present? %>
    <%= @cart.collect { |item| item.to_builder.attributes! } %>
    <%= button_to "Buy now!", checkout_create_path, remote: true, data: { turbo: false, disable_with: "validating..."} %>
<% end %>